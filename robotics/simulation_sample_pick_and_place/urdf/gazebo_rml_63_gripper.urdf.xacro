<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="$(arg robot_name)">
  <xacro:arg name="topic_ns" default=""/>
  <!-- Import description urdf file -->
  <xacro:include filename="$(find simulation_sample_pick_and_place)/urdf/rml_63_gripper_arm/rml_63.urdf" />
  <xacro:include filename="$(find simulation_sample_pick_and_place)/urdf/rml_63_gripper_arm/gripper.urdf" />
  <xacro:include filename="$(find simulation_sample_pick_and_place)/urdf/orbbec_cameras/gemini335_336.urdf.xacro" />

  <xacro:rml_63 ns=""/>
  <xacro:rml_gripper ns=""/>
  <xacro:gemini_335_336 ns=""/>

  <!-- Arm RGB camera -->
  <xacro:arg name="enable_rgb_camera" default="false"/>
  <xacro:arg name="rgb_camera_config" default=""/>
  <xacro:if value="${'$(arg enable_rgb_camera)' if '$(arg rgb_camera_config)' != '' else 'false'}">
    <xacro:include filename="$(find simulation_sample_pick_and_place)/urdf/xacro/gazebo_rgb_camera.xacro" />
    <xacro:gazebo_camera ns="" reference_link="camera_color_frame"
      camera_params_yaml_path="$(arg rgb_camera_config)"/>
  </xacro:if>
  <!-- Arm Depth camera -->
  <xacro:arg name="enable_depth_camera" default="false"/>
  <xacro:arg name="depth_camera_config" default=""/>
  <xacro:if value="${'$(arg enable_depth_camera)' if '$(arg depth_camera_config)' != '' else 'false'}">
    <xacro:include filename="$(find simulation_sample_pick_and_place)/urdf/xacro/gazebo_depth_camera.xacro" />
    <xacro:gazebo_depth_camera ns="" reference_link="camera_depth_frame"
      depth_camera_params_yaml_path="$(arg depth_camera_config)"/>
  </xacro:if>

  <joint name="arm_camera_joint" type="fixed">
    <origin xyz="0.080 0 0.015" rpy="3.1415926 -1.570796 0"/>
    <parent link="link6"/>
    <child link="camera_link"/>
  </joint>

  <link name="world"/>
  <joint name="arm_virtual_joint" type="fixed">
    <parent link="world"/>
    <child link="arm_base_link"/>
  </joint>

  <!-- ros2_control -->
  <xacro:include filename="$(find simulation_sample_pick_and_place)/urdf/xacro/rml_63_gripper_ros2_control.xacro" />
  <xacro:rml_63_gripper_ros2_control ns="" topic_ns="$(arg topic_ns)"
      initial_positions_yaml_path="$(find simulation_sample_pick_and_place)/config/initial_positions.yaml"
      ros2_controllers_yaml_path="$(find simulation_sample_pick_and_place)/config/rml_63_ros2_controllers.yaml"/>
</robot>

